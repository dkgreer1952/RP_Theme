@page
@{
    string title = "Test Page 1";
    ViewData["Title"] = title;
}
<div>
    <h1>@title</h1>
    <p>Changing the theme on this page will also change it on the Home page</p>
    <div>Sample form items</div>
    <div class="row col-auto w-50">
        <div class="col">
            <button class="btn btn-primary">Test</button>
        </div>
        <div class="col">
            <input class="form-control form-control-sm rounded" style="width: 15em;" />
        </div>
        <div class="col">
            <input type="checkbox" class="form-check form-check-input" />
        </div>
        <div class="col">
            <div class="form-check form-switch checkbox-lg">
                <input type="checkbox" class="form-check-input" />
            </div>
        </div>
        <div class="col">
            <select class="form-select form-select-sm d-inline" style="width:5.5em;">
                <option>Any</option>
                <option>Yes</option>
                <option>No</option>
            </select>
        </div>
    </div>
</div>
